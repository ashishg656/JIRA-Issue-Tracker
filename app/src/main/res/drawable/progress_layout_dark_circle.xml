<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="oval">
            <size
                android:width="111dp"
                android:height="111dp" />

            <solid android:color="@color/bnc_progress_layout_light_circle" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="oval">
            <size
                android:width="110dp"
                android:height="110dp" />

            <solid android:color="@color/bnc_progress_layout_dark_circle" />

            <stroke
                android:width="1dp"
                android:color="@color/bnc_progress_layout_darkest_outline" />
        </shape>
    </item>

</layer-list>