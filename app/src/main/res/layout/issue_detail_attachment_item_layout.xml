<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/attachment_layout_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/z_margin_mini"
    android:layout_marginRight="@dimen/z_margin_mini"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/attachment_layout_bg"
        android:orientation="vertical"
        android:padding="@dimen/z_margin_small">

        <ImageView
            android:id="@+id/attachment_image"
            android:layout_width="@dimen/issue_detail_attachment_image_height"
            android:layout_height="@dimen/issue_detail_attachment_image_height"
            android:layout_marginBottom="@dimen/z_margin_mini"
            android:scaleType="centerInside"
            android:src="@drawable/ic_attachment" />


        <TextView
            android:id="@+id/attachment_names"
            android:layout_width="@dimen/issue_detail_attachment_image_height"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:gravity="center"
            android:lines="2"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:text="sfjjk"
            android:textColor="@color/z_text_color_medium_dark"
            android:textSize="@dimen/z_font_supermini"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>