<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/issue_detail_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/z_margin_large"
        android:paddingTop="108dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/z_margin_6dp"
            android:background="@drawable/ic_cart_bg_shadow"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/z_margin_large">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/issue_detail_projectImage"
                android:layout_width="@dimen/issue_detail_project_image_radius"
                android:layout_height="@dimen/issue_detail_project_image_radius"
                android:src="@drawable/test_user" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_large"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/z_margin_large">

                <TextView
                    android:id="@+id/issue_detail_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/message_count_color_4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/issue_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/z_margin_mini"
                    android:textColor="@color/z_text_color_medium_dark"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/z_margin_medium"
                    android:background="@color/z_grey_shade_3" />

                <TextView
                    android:id="@+id/issue_detail_projectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/z_margin_medium"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/z_margin_6dp"
            android:layout_marginRight="@dimen/z_margin_6dp"
            android:background="@drawable/ic_cart_bg_shadow"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/z_margin_medium"
                android:text="DETAILS"
                android:textColor="@color/z_text_color_medium_dark"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Type"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/issue_detail_typeImage"
                        android:layout_width="@dimen/issue_list_issue_type_image_height"
                        android:layout_height="@dimen/issue_list_issue_type_image_height"
                        android:layout_marginRight="@dimen/z_margin_medium" />

                    <TextView
                        android:id="@+id/issue_detail_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Priority"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/issue_detail_priorityIMage"
                        android:layout_width="@dimen/issue_list_issue_type_image_height"
                        android:layout_height="@dimen/issue_list_issue_type_image_height"
                        android:layout_marginRight="@dimen/z_margin_medium" />

                    <TextView
                        android:id="@+id/issue_detail_priority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Affects Version/s"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Labels"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sprint"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">

                    <TextView
                        android:id="@+id/issue_detail_sprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_1" />

            <LinearLayout
                android:id="@+id/issue_detail_statusContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/z_margin_small"
                android:paddingLeft="@dimen/z_margin_large"
                android:paddingRight="@dimen/z_margin_small"
                android:paddingTop="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/issue_detail_statusImage"
                        android:layout_width="@dimen/issue_list_issue_type_image_height"
                        android:layout_height="@dimen/issue_list_issue_type_image_height"
                        android:layout_marginRight="@dimen/z_margin_medium" />

                    <TextView
                        android:id="@+id/issue_detail_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/z_margin_mini"
                        android:text="sd"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/z_font_mini"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/z_margin_small"
                android:paddingLeft="@dimen/z_margin_large"
                android:paddingRight="@dimen/z_margin_small"
                android:paddingTop="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resolution"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">

                    <TextView
                        android:id="@+id/issue_detail_resolution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fix Version/s"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">

                    <org.apmem.tools.layouts.FlowLayout
                        android:id="@+id/issue_detail_fixversionslayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/z_margin_6dp"
            android:layout_marginRight="@dimen/z_margin_6dp"
            android:layout_marginTop="@dimen/z_margin_6dp"
            android:background="@drawable/ic_cart_bg_shadow"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/z_margin_medium"
                android:text="DESCRIPTION"
                android:textColor="@color/z_text_color_medium_dark"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_3" />

            <TextView
                android:id="@+id/issue_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:padding="@dimen/z_margin_large"
                android:textColor="@color/z_text_color_medium_dark"
                android:textSize="@dimen/z_font_mini" />

            <TextView
                android:id="@+id/issue_detail_showMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/z_margin_small"
                android:text="Show More"
                android:textColor="@color/message_count_color_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/z_margin_6dp"
            android:layout_marginRight="@dimen/z_margin_6dp"
            android:layout_marginTop="@dimen/z_margin_6dp"
            android:background="@drawable/ic_cart_bg_shadow"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/z_margin_medium"
                android:text="PEOPLE"
                android:textColor="@color/z_text_color_medium_dark"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_3" />

            <LinearLayout
                android:id="@+id/issue_detail_assigneeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Assignee"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/issue_detail_reporterImage"
                        android:layout_width="@dimen/issue_detail_assignee_image_radius"
                        android:layout_height="@dimen/issue_detail_assignee_image_radius"
                        android:layout_marginRight="@dimen/z_margin_medium"
                        android:src="@drawable/test_user" />

                    <TextView
                        android:id="@+id/issue_detail_assignee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_1" />

            <LinearLayout
                android:id="@+id/issue_detail_reporterContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reporter"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/issue_detail_assigneeImage"
                        android:layout_width="@dimen/issue_detail_assignee_image_radius"
                        android:layout_height="@dimen/issue_detail_assignee_image_radius"
                        android:layout_marginRight="@dimen/z_margin_medium"
                        android:src="@drawable/test_user" />

                    <TextView
                        android:id="@+id/issue_detail_reporter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Votes"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/issue_detail_votes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />

                    <TextView
                        android:id="@+id/issue_detail_vote_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/z_margin_mini"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:includeFontPadding="false"
                        android:padding="@dimen/z_margin_small"
                        android:text="VOTE"
                        android:textColor="@color/green_color_primary"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Watchers"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/issue_detail_watches"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />

                    <TextView
                        android:id="@+id/issue_detail_watch_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/z_margin_mini"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:includeFontPadding="false"
                        android:padding="@dimen/z_margin_small"
                        android:text="WATCH"
                        android:textColor="@color/green_color_primary"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/z_margin_6dp"
            android:layout_marginRight="@dimen/z_margin_6dp"
            android:layout_marginTop="@dimen/z_margin_6dp"
            android:background="@drawable/ic_cart_bg_shadow"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/z_margin_medium"
                android:text="DATES"
                android:textColor="@color/z_text_color_medium_dark"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Created"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/issue_list_issue_type_image_height"
                        android:layout_height="@dimen/issue_list_issue_type_image_height"
                        android:layout_marginRight="@dimen/z_margin_medium" />

                    <TextView
                        android:id="@+id/issue_detail_dateCreated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Updated"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/issue_list_issue_type_image_height"
                        android:layout_height="@dimen/issue_list_issue_type_image_height"
                        android:layout_marginRight="@dimen/z_margin_medium" />

                    <TextView
                        android:id="@+id/issue_detail_dateUpdated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/z_grey_shade_1" />

            <LinearLayout
                android:id="@+id/issue_detail_dateResolvedContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/z_margin_small"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resolved"
                    android:textSize="@dimen/z_font_supermini" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/issue_list_issue_type_image_height"
                        android:layout_height="@dimen/issue_list_issue_type_image_height"
                        android:layout_marginRight="@dimen/z_margin_medium" />

                    <TextView
                        android:id="@+id/issue_detail_dateResolved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/z_text_color_medium_dark"
                        android:textSize="@dimen/z_font_supermini" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>