<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:background="@drawable/ic_cart_bg_shadow"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_stream_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/z_margin_medium"
        android:text="Hello"
        android:textColor="@color/z_text_color_dark" />

    <TextView
        android:id="@+id/activity_stream_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/z_margin_small"
        android:layout_marginRight="@dimen/z_margin_medium"
        android:text="10 days ago"
        android:textColor="@color/z_text_color_light"
        android:textSize="@dimen/z_font_supermini" />

</LinearLayout>