<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/commentlayouttoopenuserprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/z_margin_medium"
            android:paddingTop="@dimen/z_margin_medium">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circularimage"
                android:layout_width="@dimen/z_seen_by_uploader_image_height"
                android:layout_height="@dimen/z_seen_by_uploader_image_height" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="@dimen/z_margin_medium">


                <TextView
                    android:id="@+id/uploadrname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ashish Goel"
                    android:textColor="@color/z_text_color_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 days ago"
                    android:textColor="@color/z_text_color_light"
                    android:textSize="@dimen/z_font_supermini" />


                <TextView
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/z_margin_mini"
                    android:layout_marginTop="@dimen/z_margin_mini"
                    android:text="@string/lorel_ipsum"
                    android:textColor="@color/z_text_color_dark" />

                <LinearLayout
                    android:id="@+id/action_buttons_comments_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/edit_comment"
                        android:layout_width="@dimen/material_button_height"
                        android:layout_height="@dimen/material_button_height"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/edit_comment_icon"
                            android:layout_width="@dimen/z_margin_large"
                            android:layout_height="@dimen/z_margin_large"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_edit_pencil" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/delete_comment"
                        android:layout_width="@dimen/material_button_height"
                        android:layout_height="@dimen/material_button_height"
                        android:layout_marginLeft="@dimen/z_margin_small"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/delete_comment_icon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_delete_bin" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:background="@color/z_grey_shade_3" />

</LinearLayout>