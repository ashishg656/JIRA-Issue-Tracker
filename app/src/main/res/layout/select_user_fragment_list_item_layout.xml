<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/openuserprofilechangelogitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/z_margin_small"
        android:paddingLeft="@dimen/z_margin_medium"
        android:paddingTop="@dimen/z_margin_6dp">

        <FrameLayout
            android:layout_width="@dimen/select_user_list_item_image_radius"
            android:layout_height="@dimen/select_user_list_item_image_radius">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circularimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/test_user" />

            <ImageView
                android:id="@+id/circularimageImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/test_user"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/circularimageImageIssueType"
                android:layout_width="@dimen/issue_list_issue_type_image_height"
                android:layout_height="@dimen/issue_list_issue_type_image_height"
                android:layout_gravity="center"
                android:src="@drawable/test_user"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/z_margin_small"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="@dimen/z_margin_medium">


            <TextView
                android:id="@+id/uploadrname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Ashish Goel"
                android:textColor="@color/z_text_color_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_mini"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="email@gmal.com"
                android:textColor="@color/z_text_color_light"
                android:textSize="@dimen/z_font_supermini" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/z_margin_medium"
            android:clickable="false" />
    </LinearLayout>

</LinearLayout>